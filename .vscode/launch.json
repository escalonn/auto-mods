    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Build and Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/create-data-mod",
            // "args": [],
            "args": ["show-costs", "test.dat"],
            // "stopAtEntry": true,
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build for Debugging"
        }
    ]
}
